{
  "name": "pr4y-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.0",
  "workspaces": ["apps/*", "packages/*", "scripts/*"],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit",
    "test": "echo 'No tests yet' && exit 0",
    "build": "npm run build --prefix apps/api",
    "api:lint": "pnpm --filter @pr4y/api lint",
    "api:typecheck": "pnpm --filter @pr4y/api typecheck",
    "db:migrate": "npm run db:migrate --prefix apps/api",
    "db:deploy:prod": "npm run db:migrate --prefix apps/api",
    "mobile:buildDebug": "cd apps/mobile-android && gradlew.bat assembleDebug",
    "mobile:installDebug": "cd apps/mobile-android && gradlew.bat installDebug",
    "mobile:apk": "cd apps/mobile-android && gradlew.bat assembleDebug"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
