{
  "name": "@pr4y/api",
  "version": "0.1.0",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "prisma generate && node scripts/build.mjs",
