    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "argon2": "^0.44.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "pg": "^8.18.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "esbuild": "^0.27.3",
    "prisma": "^7.4.0",
    "ts-node-dev": "^2.0.0"
  }
}
