// PR4Y - Prisma schema
// Postgres database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url eliminado: ahora se configura en prisma.config.ts
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  sessions  Session[]
  wrappedDek WrappedDek?
  records   Record[]
}

model Session {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
  device    String?
}

model WrappedDek {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  kdfName   String
  kdfParams Json
  saltB64   String
  wrappedDekB64 String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Record {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  type      String
  version   Int
  encryptedPayloadB64 String
  clientUpdatedAt DateTime
  serverUpdatedAt DateTime @updatedAt
  deleted   Boolean @default(false)
}
